                $("#btn_login").click(function () {
                    var $_this = $(this);
                    $_this.addClass('disabled');

                    if ($("#form_login").validationEngine('validate')) {
                        var data = $("#form_login").serialize();

                        $.ajax({
                            url: "index/login/",
                            data: data,
                            type: 'POST',
                            dataType: 'json'
                        }).done(function (res) {
                            if (res == 'OK') {
                                $_this.removeClass('disabled');
                                $(location).attr('href', '<?php echo PUBLIC_PATH . 'menu/' ?>');

                            } else if (res === 'fail') {
                                $_this.removeClass('disabled');
                                //$('#cargando').modal('hide');
                                
                                $('#modal_error').modal('show');
                            } else if (res === false) {
                                //$('#cargando').modal('hide');
                                $('#modal_error').modal('show');
                                $_this.removeClass('disabled');
                            } else {
                                //$('#cargando').modal('hide');
                            }
                        }).fail(function (res) {
                            //$('#cargando').modal('hide');
                            $_this.removeClass('disabled');
                            $('#modal_error').modal('show');
                        });
                    } else {
                        $_this.removeClass('disabled');
                        //$('#cargando').modal('hide');
                    }
                });

            });

        </script>
